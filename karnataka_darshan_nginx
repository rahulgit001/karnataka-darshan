server {
    listen 80;
    server_name karnatakadarshan.com www.karnatakadarshan.com;

    location / {
        proxy_pass http://unix:/var/www/karnataka-darshan/karnataka_darshan.sock;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /static/ {
        alias /var/www/karnataka-darshan/static/;
    }
}
